FUNCTION_BLOCK ACADEMIC

VAR_INPUT
	Number_Of_Publications		:	REAL; (* RANGE(0 ..) *) 
	Time_Since_Last_Publication	:	REAL; (* RANGE(0 ..) *) 
	Number_Of_Citations			:	REAL; (* RANGE(0 ..) *) 
END_VAR

VAR_OUTPUT
	Expertise	:	REAL;
END_VAR
	
FUZZIFY Number_Of_Publications
	TERM Low := (0, 0) (3, 1) (7, 0) ;
	TERM Considerable := (3, 0) (7, 1) (10, 1) (15, 0) ;
	TERM High := (10, 0) (15, 1) ;
END_FUZZIFY

FUZZIFY Time_Since_Last_Publication
	TERM A_Couple_Of_Months := (0, 1) (3, 1) (6, 0) ;
	TERM Around_One_Year := (4, 0) (6, 1) (12, 1) (15, 0) ;
	TERM Years := (9, 0) (15, 1) ;
END_FUZZIFY

FUZZIFY Number_Of_Citations
	TERM Low := (0, 1) (4, 1) (20, 0) ;
	TERM Considerable := (4, 0) (20, 1) (40, 1) (80, 0) ;
	TERM High := (40, 0) (70, 1) ;
END_FUZZIFY

DEFUZZIFY Expertise
	TERM Low := 1 ;
	TERM Medium := 2 ;
	TERM High := 3 ;
	TERM Very_High := 4 ;
	METHOD: COGS ;
END_DEFUZZIFY
	
RULEBLOCK first

AND:MIN;
ACCU:MAX;
RULE 0: IF (Number_Of_Publications IS Low) AND (Time_Since_Last_Publication IS A_Couple_Of_Months) AND (Number_Of_Citations IS Low) THEN Expertise IS Low;
RULE 1: IF (Number_Of_Publications IS Low) AND (Time_Since_Last_Publication IS A_Couple_Of_Months) AND (Number_Of_Citations IS Considerable) THEN Expertise IS Medium;
RULE 2: IF (Number_Of_Publications IS Low) AND (Time_Since_Last_Publication IS A_Couple_Of_Months) AND (Number_Of_Citations IS High) THEN Expertise IS High;
RULE 3: IF (Number_Of_Publications IS Low) AND (Time_Since_Last_Publication IS Around_One_Year) AND (Number_Of_Citations IS Low) THEN Expertise IS Low;
RULE 4: IF (Number_Of_Publications IS Low) AND (Time_Since_Last_Publication IS Around_One_Year) AND (Number_Of_Citations IS Considerable) THEN Expertise IS Medium;
RULE 5: IF (Number_Of_Publications IS Low) AND (Time_Since_Last_Publication IS Around_One_Year) AND (Number_Of_Citations IS High) THEN Expertise IS High;
RULE 6: IF (Number_Of_Publications IS Low) AND (Time_Since_Last_Publication IS Years) AND (Number_Of_Citations IS Low) THEN Expertise IS Low;
RULE 7: IF (Number_Of_Publications IS Low) AND (Time_Since_Last_Publication IS Years) AND (Number_Of_Citations IS Considerable) THEN Expertise IS Medium;
RULE 8: IF (Number_Of_Publications IS Low) AND (Time_Since_Last_Publication IS Years) AND (Number_Of_Citations IS High) THEN Expertise IS Medium;
RULE 9: IF (Number_Of_Publications IS Considerable) AND (Time_Since_Last_Publication IS A_Couple_Of_Months) AND (Number_Of_Citations IS Low) THEN Expertise IS Low;
RULE 10: IF (Number_Of_Publications IS Considerable) AND (Time_Since_Last_Publication IS A_Couple_Of_Months) AND (Number_Of_Citations IS Considerable) THEN Expertise IS Medium;
RULE 11: IF (Number_Of_Publications IS Considerable) AND (Time_Since_Last_Publication IS A_Couple_Of_Months) AND (Number_Of_Citations IS High) THEN Expertise IS Very_High;
RULE 12: IF (Number_Of_Publications IS Considerable) AND (Time_Since_Last_Publication IS Around_One_Year) AND (Number_Of_Citations IS Low) THEN Expertise IS Low;
RULE 13: IF (Number_Of_Publications IS Considerable) AND (Time_Since_Last_Publication IS Around_One_Year) AND (Number_Of_Citations IS Considerable) THEN Expertise IS Medium;
RULE 14: IF (Number_Of_Publications IS Considerable) AND (Time_Since_Last_Publication IS Around_One_Year) AND (Number_Of_Citations IS High) THEN Expertise IS High;
RULE 15: IF (Number_Of_Publications IS Considerable) AND (Time_Since_Last_Publication IS Years) AND (Number_Of_Citations IS Low) THEN Expertise IS Low;
RULE 16: IF (Number_Of_Publications IS Considerable) AND (Time_Since_Last_Publication IS Years) AND (Number_Of_Citations IS Considerable) THEN Expertise IS Low;
RULE 17: IF (Number_Of_Publications IS Considerable) AND (Time_Since_Last_Publication IS Years) AND (Number_Of_Citations IS High) THEN Expertise IS Medium;
RULE 18: IF (Number_Of_Publications IS High) AND (Time_Since_Last_Publication IS A_Couple_Of_Months) AND (Number_Of_Citations IS Low) THEN Expertise IS Medium;
RULE 19: IF (Number_Of_Publications IS High) AND (Time_Since_Last_Publication IS A_Couple_Of_Months) AND (Number_Of_Citations IS Considerable) THEN Expertise IS High;
RULE 20: IF (Number_Of_Publications IS High) AND (Time_Since_Last_Publication IS A_Couple_Of_Months) AND (Number_Of_Citations IS High) THEN Expertise IS Very_High;
RULE 21: IF (Number_Of_Publications IS High) AND (Time_Since_Last_Publication IS Around_One_Year) AND (Number_Of_Citations IS Low) THEN Expertise IS Medium;
RULE 22: IF (Number_Of_Publications IS High) AND (Time_Since_Last_Publication IS Around_One_Year) AND (Number_Of_Citations IS Considerable) THEN Expertise IS High;
RULE 23: IF (Number_Of_Publications IS High) AND (Time_Since_Last_Publication IS Around_One_Year) AND (Number_Of_Citations IS High) THEN Expertise IS High;
RULE 24: IF (Number_Of_Publications IS High) AND (Time_Since_Last_Publication IS Years) AND (Number_Of_Citations IS Low) THEN Expertise IS Low;
RULE 25: IF (Number_Of_Publications IS High) AND (Time_Since_Last_Publication IS Years) AND (Number_Of_Citations IS Considerable) THEN Expertise IS Medium;
RULE 26: IF (Number_Of_Publications IS High) AND (Time_Since_Last_Publication IS Years) AND (Number_Of_Citations IS High) THEN Expertise IS High;

END_RULEBLOCK

END_FUNCTION_BLOCK